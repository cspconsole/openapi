{
  "openapi" : "3.0.0",
  "info" : {
    "title" : "CSP Console Integration API",
    "description" : "CSP integration API allows you to automate management of Content-Security-Policy headers within your application",
    "contact" : {
      "email" : "developers@cspconsole.com"
    },
    "license" : {
      "name" : "Apache 2.0",
      "url" : "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version" : "1.0.0"
  },
  "servers" : [ {
    "url" : "https://{project}.api.cspconsole.com",
    "description" : "dedicated project API endpoint",
    "variables" : {
      "project" : {
        "description" : "Project slug of your project",
        "default" : "foo"
      }
    }
  } ],
  "tags" : [ {
    "name" : "CI/CD Integration"
  }, {
    "name" : "Report"
  } ],
  "paths" : {
    "/v1/csp/configuration/header" : {
      "get" : {
        "tags" : [ "CI/CD Integration" ],
        "summary" : "returns HTTP header configuration",
        "description" : "By passing in the appropriate options, you can implement CSP into your application\n",
        "operationId" : "cspHeader",
        "parameters" : [ {
          "name" : "format",
          "in" : "query",
          "description" : "pass a mandatory output string for looking up inventory",
          "required" : true,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "string",
            "enum" : [ "nginx", "apache", "json", "plain" ]
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "search results matching criteria",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/InventoryItem"
                  }
                }
              }
            }
          },
          "400" : {
            "description" : "bad input parameter"
          },
          "401" : {
            "description" : "invalid api-key"
          }
        },
        "security" : [ {
          "ApiKeyAuth" : [ ]
        } ]
      }
    },
    "/v1/csp/configuration/directives" : {
      "get" : {
        "tags" : [ "CI/CD Integration" ],
        "summary" : "returns configuration of CSP directives",
        "description" : "By passing in the appropriate options, you can search for\navailable inventory in the system\n",
        "operationId" : "cspConfiguration",
        "parameters" : [ {
          "name" : "format",
          "in" : "query",
          "description" : "pass an optional search string for looking up inventory",
          "required" : true,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "string",
            "enum" : [ "nginx", "apache", "json", "plain" ]
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "search results matching criteria",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/InventoryItem"
                  }
                }
              }
            }
          },
          "400" : {
            "description" : "bad input parameter"
          }
        },
        "security" : [ {
          "ApiKeyAuth" : [ ]
        } ]
      }
    },
    "/v1/csp/configuration/hash" : {
      "get" : {
        "tags" : [ "CI/CD Integration" ],
        "summary" : "returns md5 hash of existing configuration",
        "description" : "By passing in the appropriate options, you can search for\navailable inventory in the system\n",
        "operationId" : "cspHash",
        "parameters" : [ {
          "name" : "format",
          "in" : "query",
          "description" : "pass an optional search string for looking up inventory",
          "required" : true,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "string",
            "enum" : [ "nginx", "apache", "json", "plain" ]
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "search results matching criteria",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/InventoryItem"
                  }
                }
              }
            }
          },
          "400" : {
            "description" : "bad input parameter"
          }
        },
        "security" : [ {
          "ApiKeyAuth" : [ ]
        } ]
      }
    },
    "/v1/csp/report" : {
      "post" : {
        "tags" : [ "Report" ],
        "summary" : "stores CSP violation report",
        "description" : "By passing in the appropriate options, you can implement CSP into your application\n",
        "operationId" : "cspReport",
        "parameters" : [ {
          "name" : "format",
          "in" : "query",
          "description" : "pass a mandatory output string for looking up inventory",
          "required" : true,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "string",
            "enum" : [ "nginx", "apache", "json", "plain" ]
          }
        } ],
        "security" : [ {
          "ApiKeyAuth" : [ ]
        } ]
      }
    }
  },
  "components" : {
    "schemas" : {
      "HeaderItem" : {
        "required" : [ "id", "manufacturer", "name", "releaseDate" ],
        "type" : "object",
        "properties" : {
          "id" : {
            "type" : "string",
            "format" : "uuid",
            "example" : "d290f1ee-6c54-4b01-90e6-d701748f0851"
          },
          "name" : {
            "type" : "string",
            "example" : "Widget Adapter"
          },
          "releaseDate" : {
            "type" : "string",
            "format" : "date-time",
            "example" : "2016-08-29T09:12:33.001Z"
          },
          "manufacturer" : {
            "$ref" : "#/components/schemas/Manufacturer"
          }
        }
      },
      "Output" : {
        "required" : [ "name" ],
        "type" : "object",
        "properties" : {
          "name" : {
            "type" : "string",
            "example" : "ACME Corporation"
          },
          "homePage" : {
            "type" : "string",
            "format" : "url",
            "example" : "https://www.acme-corp.com"
          },
          "phone" : {
            "type" : "string",
            "example" : "408-867-5309"
          }
        }
      }
    },
    "securitySchemes" : {
      "ApiKeyAuth" : {
        "type" : "apiKey",
        "name" : "Authorization",
        "in" : "header"
      }
    }
  }
}